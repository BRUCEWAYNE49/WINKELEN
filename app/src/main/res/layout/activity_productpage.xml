<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    android:orientation="vertical"
    tools:context="com.example.myapplication02.ProductpageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/b01"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/img_31"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:gravity="end"
                android:text="WINKELEN"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:src="@drawable/img_5"></ImageView>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/img_32"></ImageView>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="@font/font_01"
        android:textColor="#000"
        android:paddingBottom="10dp"
        android:textSize="15dp"
        android:text="                           Italin style Coat inspired by John Wick."></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/edittext"
        android:elevation="10dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_24"></ImageView>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/borderline"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="05dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs.12000"
            android:fontFamily="@font/font_01"
            android:textSize="15dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:textColor="#000"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selling Price"
            android:fontFamily="@font/font_01"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingTop="10dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMI:Is available."
            android:fontFamily="@font/font_01"
            android:layout_marginBottom="08dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingTop="10dp"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:paddingTop="15dp"
                android:src="@drawable/img_40"></ImageView>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="        From 45 customers"
            android:fontFamily="@font/font_01"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="wrap_content"
        android:paddingRight="20dp"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext"
            android:backgroundTint="#DCDCDC"
            android:elevation="10dp"
            android:text="Buy"></androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/gotocard"
            android:background="@drawable/edittext"
            android:backgroundTint="#DCDCDC"
            android:elevation="10dp"
            android:text="Add to Card"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>